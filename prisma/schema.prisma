generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Mentor {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  bio        String
  company    String
  cost       Int
  experience Int
  img        String
  name       String
  occupation String
  tags       String[]
  meeting    Meeting[]
}

model Meeting {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  mentor   Mentor? @relation(fields: [mentorId], references: [id])
  mentorId String  @db.ObjectId
  date     String
  time     String
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  password  String
  industry  String
  experience Int
  mentorPreferences MentorPreference
  bio String
  email String @unique
  img String
  goals Goal[]
}

model Goal {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  dueDate String?
  progress Int?
  notes String?
  milestones Milestone[]
  userId String
  user User @relation(fields: [userId], references: [id])
}

type MentorPreference {
  experience Int
  cost Int
}

type Milestone {
      name String
      date String
}
